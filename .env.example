# ===========================================
# üöÄ GIVONDO GROWTH ENGINE - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ===========================================
# üîë API KEYS (Multi-Model Support)
# ===========================================

# Google AI (Primary - Gemini 2.0 for orchestration & discovery)
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic (Claude Opus 4.5 for high-quality writing)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (Optional fallback)
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# üóÑÔ∏è DATA INFRASTRUCTURE
# ===========================================

# PostgreSQL Database (Neon - Free Tier)
# Get your free database at https://neon.tech
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/growthengine?sslmode=require

# Alternative: Local PostgreSQL
# DATABASE_URL=postgresql://postgres:password@localhost:5432/growthengine

# Pinecone (Vector store for embeddings)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=growth-engine-embeddings

# ===========================================
# ‚òÅÔ∏è GOOGLE CLOUD PLATFORM (Production)
# ===========================================

GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ===========================================
# ‚öôÔ∏è APPLICATION SETTINGS
# ===========================================

# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Daily quotas
DISCOVERY_QUOTA=500
APPLICATION_QUOTA=100
OUTREACH_QUOTA=20

# ===========================================
# üéØ AGENT CONFIGURATION
# ===========================================

# Default models for each agent
ORCHESTRATOR_MODEL=gemini-2.0-flash-exp
DISCOVERY_MODEL=gemini-2.0-flash-exp
APPLICATION_MODEL=claude-opus-4-5-20250514
PROFILE_MODEL=gemini-1.5-pro
SCORING_MODEL=gemini-1.5-flash
OUTREACH_MODEL=gemini-2.0-flash-exp

# Temperature settings (0.0-1.0)
DISCOVERY_TEMPERATURE=0.3
APPLICATION_TEMPERATURE=0.7
OUTREACH_TEMPERATURE=0.6

# ===========================================
# üîí RATE LIMITING
# ===========================================

# Requests per minute limits
GOOGLE_RPM=60
ANTHROPIC_RPM=50
OPENAI_RPM=60

# Concurrent requests
MAX_CONCURRENT_DISCOVERIES=10
MAX_CONCURRENT_APPLICATIONS=5

# ===========================================
# üìä MONITORING & ALERTS
# ===========================================

# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Email alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_TO=alerts@example.com

# ===========================================
# üìä ANALYTICS (Optional)
# ===========================================

# BigQuery for analytics
BIGQUERY_DATASET=growth_engine_analytics

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# üê≥ DOCKER CONFIGURATION
# ===========================================

# Redis (for caching/sessions in production)
REDIS_URL=redis://localhost:6379/0

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
